@{
    ViewData["Title"] = "Acesso Negado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">🚫 Acesso Negado</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5>Você não tem permissão para acessar esta página.</h5>

                        <hr>

                        <div class="row">
                            <div class="col-md-6">
                                <strong>Sistema:</strong> @ViewBag.Sistema<br>
                                <strong>Função:</strong> @ViewBag.Funcao<br>
                                <strong>Ações necessárias:</strong> @ViewBag.Acoes
                            </div>
                            <div class="col-md-6">
                                <p class="text-muted">
                                    Entre em contato com o administrador do sistema
                                    para solicitar as permissões necessárias.
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-3">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="bi bi-house"></i> Voltar ao Início
                        </a>

                        @if (!string.IsNullOrWhiteSpace(ViewBag.ReturnUrl as string))
                        {
                            <a href="javascript:history.back()" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Voltar
                            </a>
                        }

                        <a href="@Url.Action("Index", "Permissions")" class="btn btn-info">
                            <i class="bi bi-shield-lock"></i> Ver Minhas Permissões
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>