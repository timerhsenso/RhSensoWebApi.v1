@model ErrorViewModel
@{
    ViewData["Title"] = "Erro";
}

<div class="container my-4">
    <h1 class="text-danger">Ops! Algo deu errado.</h1>
    <p class="text-muted">Tente novamente mais tarde. Se o problema persistir, contate o suporte.</p>

    @if (Model?.ShowRequestId == true)
    {
        <p>
            <strong>Request ID:</strong>
            <code>@Model.RequestId</code>
        </p>
    }

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Voltar para a Home</a>
</div>
