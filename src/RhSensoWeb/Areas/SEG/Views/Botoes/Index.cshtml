@{
    ViewData["Title"] = "Botões";
    Layout = "_Layout";
}

<h2 class="mb-3">Botões</h2>

<div class="row g-2 mb-3">
    <div class="col-auto">
        <input id="filtroSistema" class="form-control" placeholder="Sistema (ex: SEG)" />
    </div>
    <div class="col-auto">
        <input id="filtroFuncao" class="form-control" placeholder="Função (ex: USU/ACESSO)" />
    </div>
    <div class="col-auto">
        <button id="btnNovo" class="btn btn-primary">Novo</button>
    </div>
</div>

<table id="tabela" class="table table-striped table-hover w-100">
    <thead>
        <tr>
            <th>Código</th>
            <th>Sistema</th>
            <th>Função</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th style="width:120px">Ação</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section Styles {
    <!-- Bootstrap + DataTables (CDN, simples e confiável) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/v/bs5/dt-2.0.8/datatables.min.css" />
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/v/bs5/dt-2.0.8/datatables.min.js"></script>

    <script>
        (function () {
            const $sistema = $("#filtroSistema");
            const $funcao  = $("#filtroFuncao");

            const table = $("#tabela").DataTable({
                serverSide: true,
                processing: true,
                searching: false,
                lengthChange: true,
                pageLength: 10,
                ajax: {
                    url: "@Url.Action("GetData", "Botoes", new { area = "SEG" })",
                    data: function (d) {
                        // Envia filtros para o controller (que repassa para a API)
                        d.codigoSistema = $sistema.val();
                        d.codigoFuncao  = $funcao.val();
                    }
                },
                columns: [
                    { data: "id", className: "text-nowrap" },
                    { data: "codigoSistema", className: "text-nowrap" },
                    { data: "codigoFuncao", className: "text-nowrap" },
                    { data: "nome" },
                    { data: "descricao" },
                    {
                        data: null, orderable: false, className: "text-nowrap",
                        render: function (row) {
                            return `
                                <div class="btn-group btn-group-sm">
                                  <a class="btn btn-outline-primary" href="#">Editar</a>
                                  <button class="btn btn-outline-danger" type="button">Excluir</button>
                                </div>`;
                        }
                    }
                ],
                language: {
                    url: "https://cdn.datatables.net/plug-ins/2.0.8/i18n/pt-BR.json"
                }
            });

            // Recarrega quando mudar filtros (e só busca quando ambos preenchidos)
            function tryReload() {
                const sOk = $sistema.val()?.trim().length > 0;
                const fOk = $funcao.val()?.trim().length > 0;
                if (sOk && fOk) table.ajax.reload();
            }

            $sistema.on("change keyup", tryReload);
            $funcao.on("change keyup", tryReload);
        })();
    </script>
}
